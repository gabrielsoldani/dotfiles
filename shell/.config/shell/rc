# shellcheck shell=sh

. "$SHELLDOTDIR/utils" || return 1

# If COLORTERM is not set, assume we're using a terminal that doesn't set it,
# rather than a terminal that doesn't support colors. This variable is checked
# by some programs (e.g. `ls` on macOS) to enable color support.
if [ -z "$COLORTERM" ]; then
    export COLORTERM="$TERM"
fi

# Aliases
source_if_exists "$SHELLDOTDIR/aliases"
source_if_exists "$SHELLDOTDIR/coreutils/aliases"
source_if_exists "$SHELLDOTDIR/ffmpeg/aliases"
source_if_exists "$SHELLDOTDIR/git/aliases"
source_if_exists "$SHELLDOTDIR/make/aliases"

# Scripts
source_if_exists "$SHELLDOTDIR/1password/rc"
source_if_exists "$SHELLDOTDIR/brew/rc"
source_if_exists "$SHELLDOTDIR/gnupg/rc"
source_if_exists "$SHELLDOTDIR/coreutils/rc"
source_if_exists "$SHELLDOTDIR/starship/rc"
