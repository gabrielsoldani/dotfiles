# shellcheck shell=sh

# This variable, when and only when an interactive shell is invoked (...) shall
# be used as a pathname of a file containing shell commands to execute in the
# current environment.
# https://pubs.opengroup.org/onlinepubs/9699919799/utilities/sh.html
export ENV="$SHELLDOTDIR/rc"

shell_source_if_exists () {
    # If it's an absolute path, try that first.
    [ "$1" != "${1#/}" ] && [ -f "$1" ] && . "$1" && return
    # Otherwise, source it relative to $SHELLDOTDIR.
    [ -f "$SHELLDOTDIR/$1" ] && . "$SHELLDOTDIR/$1"
}

shell_source_if_exists "brew/profile"
shell_source_if_exists "dotnet/profile"
shell_source_if_exists "nano/profile"
shell_source_if_exists "pyenv/profile"
