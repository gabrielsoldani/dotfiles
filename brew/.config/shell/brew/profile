# shellcheck shell=sh

# Try to use Homebrew from the PATH. If it isn't available, find it
# in common install locations.
if ! HOMEBREW_PREFIX="$(brew --prefix 2>/dev/null)"; then
    HOMEBREW_PREFIX="$(/opt/homebrew/bin/brew --prefix 2>/dev/null \
        || /usr/local/bin/brew --prefix 2>/dev/null \
        || /home/linuxbrew/.linuxbrew/bin/brew --prefix 2>/dev/null \
        || "$HOME"/.linuxbrew/bin/brew --prefix 2>/dev/null)"
fi

if [ -n "$HOMEBREW_PREFIX" ]; then
    eval "$("$HOMEBREW_PREFIX"/bin/brew shellenv)"
else
    echo "brew is not installed" >&2
fi
