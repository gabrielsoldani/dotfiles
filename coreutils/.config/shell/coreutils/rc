# shellcheck shell=sh

# With brew, commands also provided by macOS and the commands dir, dircolors and
# vdir are installed with the prefix "g". To use them instead of their macOS
# counterparts, add "gnubin" to the PATH.
if [ "$(uname)" = "Darwin" ]; then
    if command -v brew >/dev/null 2>&1; then
        shell_add_to_path_if_exists "$(brew --prefix)/opt/coreutils/libexec/gnubin"
    else
        echo "brew is not installed" >&2
    fi
fi

# Enable color support for `ls`.
if ! { shell_eval_if_succeeds dircolors -b "$HOME/.dircolors" \
    || shell_eval_if_succeeds dircolors -b; } then
    echo "dircolors is not installed" >&2
    return 1
fi
